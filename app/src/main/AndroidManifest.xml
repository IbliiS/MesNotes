            android:name=".AccueilActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".AjouterNoteActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AjouterMatiereActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AjouterMoyenneActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AjouterAnneeActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".GraphiqueActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".FabActivity" />

    </application>


</manifest>
