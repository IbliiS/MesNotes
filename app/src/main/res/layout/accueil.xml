<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/accueilTitre"
        android:id="@+id/accueilTitre"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="99"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/labelAnneeAccueil"
            android:id="@+id/labelAnneeAccueil"
            android:gravity="center"
            android:layout_weight="33"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/labelMoyenneAccueil"
            android:id="@+id/labelMoyenneAccueil"
            android:layout_weight="33"
            android:gravity="center"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/labelMatiereAccueil"
            android:id="@+id/labelMatiereAccueil"
            android:layout_weight="33"
            android:gravity="center"
             />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="99">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accueilAnneeSpinner"
            android:gravity="center"
            android:layout_weight="33"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accueilSpinner"
            android:gravity="center"
            android:layout_weight="33"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accueilMatiereSpinner"
            android:gravity="center"
            android:layout_weight="33"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:weightSum="110"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelMatiereListViewAccueil"
                android:id="@+id/labelMatiereListViewAccueil"
                android:layout_weight="20"
                android:gravity="left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelNoteListViewAccueil"
                android:id="@+id/labelNoteListViewAccueil"
                android:layout_weight="30"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelCoefListViewAccueil"
                android:id="@+id/labelCoefListViewAccueil"
                android:layout_weight="30"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelMoyenneListViewAccueil"
                android:id="@+id/labelMoyenneListViewAccueil"
                android:layout_weight="30"
                android:gravity="right"
                />

        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/listView"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/accueilButtonAjouterAnnee"
                android:id="@+id/accueilButtonAjouterAnnee"
                android:onClick="addAnnee"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/accueilButtonAjouterMoyenne"
                android:id="@+id/accueilButtonAjouterMoyenne"
                android:onClick="addMoyenne"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/accueilButtonAjouterMatiere"
                android:id="@+id/accueilButtonAjouterMatiere"
                android:onClick="addMatiere"
                android:layout_gravity="center_vertical"
                android:layout_weight="25"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/accueilButtonAjouterNote"
                android:id="@+id/accueilButtonAjouterNote"
                android:onClick="addNote"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_weight="25"
                style="?android:attr/borderlessButtonStyle"
                />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>